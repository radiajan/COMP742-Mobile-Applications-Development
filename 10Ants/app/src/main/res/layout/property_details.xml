<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <include
        android:id="@+id/tbrTenant"
        layout="@layout/custom_bar_tenant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbrTenant"
        android:id="@+id/svTenant">
            <ListView
                android:id="@+id/lvTenant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tbrTenant"
                android:layout_toEndOf="@+id/tbrTenant" />
    </ScrollView>

    <include
        android:id="@+id/tbrExpense"
        layout="@layout/custom_bar_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/tbrTenant"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbrExpense"
        android:id="@+id/svExpense">

            <ListView
                android:id="@+id/lvExpense"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tbrExpense"
                android:layout_toEndOf="@+id/tbrExpense" />
    </ScrollView>
</RelativeLayout>