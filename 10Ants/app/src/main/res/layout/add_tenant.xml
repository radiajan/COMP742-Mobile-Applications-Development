<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:id="@+id/trInfo"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/colorPrimary">

        <TextView
            android:text="@string/information_tenant"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"/>
    </TableRow>

    <TextView
        android:id="@+id/tvName"
        android:text="@string/name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/trInfo"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/tvName"
        android:inputType="textPersonName"
        android:background="@drawable/round_edittext"/>

    <TextView
        android:id="@+id/tvEmail"
        android:text="@string/email"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/etName"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/tvEmail"
        android:inputType="textEmailAddress"
        android:background="@drawable/round_edittext"/>

    <TextView
        android:id="@+id/tvPhone"
        android:text="@string/phone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/etEmail"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/tvPhone"
        android:inputType="phone"
        android:background="@drawable/round_edittext"/>

    <TextView
        android:id="@+id/tvDateOfBirth"
        android:text="@string/date_of_birth"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/etPhone"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/etDateofBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvDateOfBirth"
        android:focusable="false"
        android:background="@drawable/round_edittext"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/add_tenant"
        android:layout_below="@+id/etDateofBirth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="addTenant"
        android:background="@drawable/round_button"/>
</RelativeLayout>