
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent" android:layout_height="match_parent"
android:background="@color/colorGray"
android:padding="16dp"
tools:context="com.cornell.air.a10ants.View.Login">

<ImageView
    android:id="@+id/logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="52dp"
    app:srcCompat="@drawable/applogo5" />


<Button
    android:id="@+id/btnGoogle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="Login with Google"
    android:textColor="@color/colorPrimaryDark"
    android:drawableLeft="@drawable/g"
    android:textSize="20sp"
    android:layout_marginTop="129dp"
    android:layout_below="@+id/logo"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:onClick="loginGoogle"/>

<Button
    android:id="@+id/btnFacebook"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="Login with Facebook"
    android:textColor="@color/colorPrimaryDark"
    android:drawableLeft="@drawable/f"
    android:textSize="20sp"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/btnGoogle"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>